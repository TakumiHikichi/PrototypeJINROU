<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/haikei2"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:id="@+id/start_game"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#996666"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_rule"
        android:id="@+id/read_rule"
        android:layout_below="@+id/start_game"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="#9966FF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:id="@+id/setting"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/start_game"
        android:layout_alignStart="@+id/start_game"
        android:background="#99CCFF"/>

</RelativeLayout>
